generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  APP_USER
  SUPER_ADMIN
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String
  password   String?
  role       UserRole @default(APP_USER)
  provider   String?
  providerId String?

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  @@unique([provider, providerId])
}

model Tenant {
  id   String @id @default(cuid())
  name String

  users       User[]
  cars        Car[]
  parkingLots ParkingLot[]
}

model Car {
  id       String          @id @default(cuid())
  plate    String
  tenantId String
  tenant   Tenant          @relation(fields: [tenantId], references: [id])
  records  ParkingRecord[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([plate, tenantId])
  @@index([tenantId])
}

model ParkingLot {
  id             String          @id @default(cuid())
  name           String
  tenantId       String
  tenant         Tenant          @relation(fields: [tenantId], references: [id])
  pricePerHour   Float
  pricePerMinute Float
  records        ParkingRecord[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([name, tenantId])
  @@index([tenantId])
}

model ParkingRecord {
  id           String     @id @default(cuid())
  entryTime    DateTime
  exitTime     DateTime?
  total        Float?
  carId        String
  car          Car        @relation(fields: [carId], references: [id])
  parkingLotId String
  parkingLot   ParkingLot @relation(fields: [parkingLotId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([carId])
  @@index([parkingLotId])
}
